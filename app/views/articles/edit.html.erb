<h1>Edit article</h1>

<%= form_with(model: @article, url: update_article_path(@article), method: :patch) do |form| %>
  <p>
  <%= form.label :name %><br/>
  <%= form.text_field :name %>
  </p>
  
  <p>
  <%= form.label :body %><br/>
  <%= form.text_area :body %>
  </p>

  <p>
  <%= form.submit "Update article" %>
  </p>
<% end %>

<%= link_to "Back to articles list", articles_path %>
